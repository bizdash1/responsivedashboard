<div class="container left-panel-active" id="container">
	<div class="form-container sign-up-container">
		<form action="#">
			<h1>Create Account</h1>
			<div class="social-container">
				<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
				<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
				<a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
			</div>
			<span>or use your email for registration</span>
			<input type="text" placeholder="Name" name="username"
			<input type="email" placeholder="Email" name="email"/>
			<input type="password" placeholder="Password" name="password"/>
			<a href="/users/signup"><button>Sign Up</button></a>
		</form>
	</div>
	<div class="form-container sign-in-container">
		<form action="/users/create_session" method="POST">
			<h1>Sign in</h1>
			<div class="social-container">
				<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
				<a href="/users/auth/google" class="social"><i class="fab fa-google"></i></a>
				<!-- <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a> -->
			</div>
			<span>or use your account</span>
			<input type="email" placeholder="Email" name="email"/>
			<input type="password" placeholder="Password" name="password"/>
			<a href="/users/forgot_password">Forgot your password?</a>
			<button>Sign In</button>
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Welcome Back!</h1>
				<p>To keep connected with us please login with your personal info</p>
				<a href="/users/signup"><button class="ghost" id="signIn">Sign In</button></a>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Hello, Friend!</h1>
				<p>Enter your personal details and start journey with us</p>
				<a href="/users/signup"><button class="ghost" id="signUp">Sign Up</button></a>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript" src="/js/signin.js"></script>
<script>
	<% if (flash.success && flash.success.length>0) { %>
		new Noty({
			theme : 'relax',
			text : '<%=flash.success%>',
			type : 'success',
			layout : 'topRight',
			timeout : 1500
		}).show();
	<% } %>
	<% if (flash.error && flash.error.length>0) { %>
		new Noty({
			theme : 'relax',
			text : '<%=flash.error%>',
			type : 'error',
			layout : 'topRight',
			timeout : 1500
		}).show();
	<% } %>
</script>